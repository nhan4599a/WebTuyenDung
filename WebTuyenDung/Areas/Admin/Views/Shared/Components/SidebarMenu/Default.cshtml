@using WebTuyenDung.Constants;
@using WebTuyenDung.Helper;

@{
    int waitForApprovalRecruimentNews = (int)ViewData[ViewConstants.WAIT_FOR_APPROVAL_RECRUIMENT_NEWS]!;
    int waitForApprovalPosts = (int)ViewData[ViewConstants.WAIT_FOR_APPROVAL_POSTS]!;
}

<div id="sidebar-menu">

    <ul class="metismenu" id="side-menu">

        <li class="menu-title">Hệ thống quản trị</li>

        <li>
            <a href="/admin" class="waves-effect">
                <i class="remixicon-dashboard-line"></i>
                <span> Dashboards </span>
                <span class="menu-arrow"></span>
            </a>
        </li>

        <li>
            <a href="javascript: void(0);" class="waves-effect active">
                <i class="remixicon-stack-line"></i>
                <span> Quản lý tài khoản </span>
                <span class="menu-arrow"></span>
            </a>
            <ul class="nav-second-level" aria-expanded="false">
                <li>
                    <a href="/admin/users">Danh sách tài khoản</a>
                </li>
            </ul>
        </li>

        <li>
            <a href="javascript: void(0);" class="waves-effect">
                <i class="remixicon-layout-line"></i>
                <span> Quản lý ứng viên </span>
                <span class="menu-arrow"></span>
            </a>
            <ul class="nav-second-level" aria-expanded="false">
                <li>
                    <a href="/admin/candidates">Danh sách ứng viên</a>
                </li>
            </ul>
        </li>

        <li>
            <a href="javascript: void(0);" class="waves-effect">
                <i class="remixicon-mail-open-line"></i>
                <span> Quản lý tuyển dụng </span>
                @if (waitForApprovalRecruimentNews > 0)
                {
                    <span class="badge badge-pink badge-pill float-right">@waitForApprovalRecruimentNews</span>
                }
                else
                {
                    <span class="menu-arrow"></span>
                }
            </a>
            <ul class="nav-second-level" aria-expanded="false">
                <li>
                    <a href="/admin/employers">Danh sách nhà tuyển dụng</a>
                </li>
                <li>
                    <a href="/admin/recruiment-news">Danh sách tin tuyển dụng</a>
                </li>
                <li>
                    <a href="/admin/recruiment-news?isApproved=0" class="waves-effect">
                        @if (waitForApprovalRecruimentNews > 0)
                        {
                            <span class="badge badge-pink badge-pill float-right">@waitForApprovalRecruimentNews</span>
                        }
                        <span> Tin tuyển dụng chờ duyệt </span>
                    </a>
                </li>
            </ul>
        </li>

        <li>
            <a href="javascript: void(0);" class="waves-effect">
                <i class="remixicon-pages-line"></i>
                <span> Quản lý bài viết </span>
                @if (waitForApprovalPosts > 0)
                {
                    <span class="badge badge-pink badge-pill float-right">@waitForApprovalPosts</span>
                }
                else
                {
                    <span class="menu-arrow"></span>
                }
            </a>
            <ul class="nav-second-level" aria-expanded="false">
                <li>
                    <a href="/admin/posts">Danh sách bài viết</a>
                </li>
                <li>
                    <a href="/admin/posts/create">Tạo bài viết mới</a>
                </li>
                <li>
                    <a href="/admin/posts?isApproved=0" class="waves-effect">
                        @if (waitForApprovalPosts > 0)
                        {
                            <span class="badge badge-pink badge-pill float-right">@waitForApprovalPosts</span>
                        }
                        <span> Bài viết chờ duyệt </span>
                    </a>
                </li>
            </ul>
        </li>
    </ul>

</div>