@model WebTuyenDung.ViewModels.User.CurriculumVitaeDetailViewModel

@{
	Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>@User.GetName() - @Model.ExpectedPosition</title>

	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<style type="text/css">
		#page1-div{
			margin: 0;
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -35%);
		}

		#about {
			overflow: hidden;
			display: -webkit-box;
			-webkit-line-clamp: 5;
			/* number of lines to show */
			line-clamp: 5;
			-webkit-box-orient: vertical;
		}
		
		p {
			margin: 0;
			padding: 0;
		}

		.ft10 {
			font-size: 13px;
			font-family: Times;
			color: #494949;
		}

		.ft11 {
			font-size: 14px;
			font-family: Times;
			color: #ffa86a;
		}

		.ft12 {
			font-size: 12px;
			font-family: Times;
			color: #494949;
		}

		.ft13 {
			font-size: 14px;
			font-family: Times;
			color: #494949;
		}

		.ft14 {
			font-size: 37px;
			font-family: Times;
			color: #ffffff;
		}

		.ft15 {
			font-size: 16px;
			font-family: Times;
			color: #ffffff;
		}

		.ft16 {
			font-size: 13px;
			font-family: Times;
			color: #000000;
		}

		.ft17 {
			font-size: 25px;
			font-family: Times;
			color: #ffa86a;
		}

		.ft18 {
			font-size: 11px;
			font-family: Times;
			color: #545454;
		}

		.ft19 {
			font-size: 13px;
			line-height: 22px;
			font-family: Times;
			color: #494949;
		}

		.ft110 {
			font-size: 13px;
			line-height: 21px;
			font-family: Times;
			color: #494949;
		}
	</style>
</head>
<body bgcolor="#A0A0A0" vlink="blue" link="blue">
	<div id="page1-div">
		<img width="892" height="1262" src="/assets/shared/target001.png" alt="background image" />
		<ul style="position:absolute;top:862px;white-space:nowrap" class="ft10">@Html.Raw(Model.Skills)</ul>
		<ul style="position:absolute;top:562px;white-space:nowrap" class="ft10">@Html.Raw(Model.SoftSkills)</ul>
		<p id="about" style="position:absolute;top:362px;left:23px;white-space:nowrap" class="ft19">@Model.Introduction</p>
		<p style="position:absolute;top:384px;left:379px;white-space:nowrap" class="ft13">@Model.Education</p>
		<p style="position:absolute;top:517px;left:379px;white-space:nowrap" class="ft13">@Model.Experience</p>
		<p style="position:absolute;top:82px;left:251px;white-space:nowrap" class="ft14"><b>@User.GetName().ToUpper()</b></p>
		<p style="position:absolute;top:136px;left:251px;white-space:nowrap" class="ft15"><b>@Model.ExpectedPosition</b></p>
		<p style="position:absolute;top:203px;left:278px;white-space:nowrap" class="ft10">@User.GetBirthDay()!.Value.ToString("MMM d, yyyy")</p>
		<p style="position:absolute;top:204px;left:254px;white-space:nowrap" class="ft16"></p>
		<p style="position:absolute;top:203px;left:584px;white-space:nowrap" class="ft10">@User.GetGender()</p>
		<p style="position:absolute;top:204px;left:562px;white-space:nowrap" class="ft16"></p>
		<p style="position:absolute;top:228px;left:278px;white-space:nowrap" class="ft10">@User.GetPhoneNumber()</p>
		<p style="position:absolute;top:230px;left:255px;white-space:nowrap" class="ft16"></p>
		<p style="position:absolute;top:228px;left:584px;white-space:nowrap" class="ft10">@Model.Email</p>
		<p style="position:absolute;top:230px;left:560px;white-space:nowrap" class="ft16"></p>
		<p style="position:absolute;top:255px;left:278px;white-space:nowrap" class="ft10">@User.GetAddress()</p>
		<p style="position:absolute;top:257px;left:257px;white-space:nowrap" class="ft16"></p>
		<p style="position:absolute;top:257px;left:561px;white-space:nowrap" class="ft16"></p>
		<p style="position:absolute;top:255px;left:584px;white-space:nowrap" class="ft10">
			@if (!string.IsNullOrWhiteSpace(Model.SourceVersionControlUrl))
			{
				<a href="@Model.SourceVersionControlUrl">@Model.SourceVersionControlUrl</a>
			}
		</p>
		<p style="position:absolute;top:318px;left:23px;white-space:nowrap" class="ft17"><b>ABOUT ME</b></p>
		<p style="position:absolute;top:517px;left:23px;white-space:nowrap" class="ft17"><b>SOFT SKILLS</b></p>
		<p style="position:absolute;top:818px;left:23px;white-space:nowrap" class="ft17"><b>SPECIALIZED SKILLS</b></p>
		<p style="position:absolute;top:318px;left:379px;white-space:nowrap" class="ft17"><b>EDUCATION</b></p>
		<p style="position:absolute;top:474px;left:379px;white-space:nowrap" class="ft17"><b>WORK EXPERIENCE</b></p>
	</div>
</body>
</html>