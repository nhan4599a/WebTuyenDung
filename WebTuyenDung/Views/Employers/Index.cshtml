@model WebTuyenDung.ViewModels.Page.DetailEmployerPageViewModel

@{
    ViewBag.Title = "Nhà tuyển dụng " + Model.Name;
}

@section css_Main {
    <link rel="stylesheet" type="text/css" href="~/Assets/Client/css/employer.css" />
}

@section scripts_Main {
    <script src="~/Assets/Client/js/style.js"></script>
    <script src="~/Assets//Shared/enum-converter.js"></script>
    <script src="~/Assets/Client/js/employer.js"></script>
}

<div class="main__wrapper grid wide">
    <div class="main__image">
        @if (Model.CoverImage != null)
        {
            <div class="main__image--conver bg-img" style="background-image: url(@Model.CoverImage);"></div>
        }
        else
        {
            <div class="main__image--conver bg-img" style="background-image: url(../../Assets/Client/img/cover-default.jpg);"></div>
        }
        <div class="main__image--avatar">
            @if (Model.Avatar != null)
            {
                <img class="full_width" src="@Model.Avatar" alt="Ảnh đại diện">
            }
            else
            {
                <img class="full_width" src="~/Assets/Client/img/Candidate/user-default.png" alt="Ảnh đại diện">
            }
        </div>
    </div>
    <h1 class="main__company--name mt-2">@Model.Name</h1>
    <input id="MaNTD" type="hidden" value="@Model.Id">
    <div class="main__company">
        <div class="main__company--introduce row">
            <div class="company__introduce--info col c-8">
                <div class="introduce__info--wrapper">
                    <h2>Giới thiệu nhà tuyển dụng</h2>
                    <p style="white-space: pre-line">
                        @Model.Description
                    </p>
                    <h2>Việc làm cùng công ty</h2>

                    <div class="introduce__employer--list">
                    </div>

                    <div class="main__result--paging">
                        <ul class="result__paging--list">
                            <li class="pager">
                                <a href="#" data-page="1">‹</a>
                            </li>
                            <li class="active">
                                <a href="#" data-page="1">1</a>
                            </li>
                            <li class="">
                                <a href="#" data-page="2">2</a>
                            </li>
                            <li class="pager">
                                <a href="#" data-page="1">›</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="company__introduce--address col c-4">
                <div class="introduce__address--wrapper">
                    <h2>Thông tin nhà tuyển dụng</h2>
                    <ul class="company__introduce--list">
                        <li>
                            <strong>Website:</strong>
                            @if (string.IsNullOrWhiteSpace(Model.Website))
                            {
                                <p>Chưa cập nhật</p>
                            }
                            else
                            {
                                <a href="@Model.Website" target="_blank">@Model.Website</a>
                            }
                        </li>
                        <li><strong>Quy mô: </strong>@Model.Size</li>
                        <li><strong>Địa chỉ: </strong><span id="address">@Model.Address</span></li>
                    </ul>

                    <h2>Bản đồ</h2>
                    <div class="introduce__address--ggmap">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

